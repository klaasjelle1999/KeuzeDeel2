<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin - Dashboard</title>

    <!-- Custom fonts for this template-->
    <link href="{{ asset('assets/vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet" type="text/css">

    <!-- Page level plugin CSS-->
    <link href="{{ asset('assets/vendor/datatables/dataTables.bootstrap4.css') }}" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="{{ asset('assets/css/sb-admin.css') }}" rel="stylesheet">
    <script src="//cdn.ckeditor.com/4.11.4/standard/ckeditor.js"></script>

</head>

<body id="page-top">

<nav class="navbar navbar-expand navbar-dark bg-dark static-top">

    <a class="navbar-brand mr-1" href="{{ path('admin') }}">Keuzedeel</a>

    <button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
        <i class="fas fa-bars"></i>
    </button>

    <div class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">

    </div>

    <!-- Navbar -->
    <ul class="navbar-nav ml-auto ml-md-0">
        <li class="nav-item dropdown no-arrow">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown"
               aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-user-circle fa-fw"></i>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">Logout</a>
            </div>
        </li>
    </ul>

</nav>

<div id="wrapper">

    <!-- Sidebar -->
    <ul class="sidebar navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="{{ path('admin') }}">
                <i class="fas fa-fw fa-tachometer-alt"></i>
                <span>Dashboard</span>
            </a>
        </li>
        <li class="nav-item active">
            <a class="nav-link" href="{{ path('admin_choice_of_section') }}">
                <i class="fas fa-fw fa-list-ol"></i>
                <span>Keuzedelen</span></a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('category') }}">
                <i class="fas fa-fw fa-bars"></i>
                <span>Categorieën</span></a>
        </li>
    </ul>

    <div id="content-wrapper">

        <div class="container-fluid">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('admin') }}">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">Keuzedeel</li>
            </ol>

            <div class="row container-fluid">
                <div class="card col-lg-6">
                    <div class="card-header">
                        <i class="fa fa-edit"></i> Het keuzedeel: "{{ choiceOfSection.name }}" bewerken.
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="form-group">
                            <label class="form-label">Naam:</label>
                            {{ form_row(form.name,  {'value': choiceOfSection.name}) }}
                        </div>
                        <div class="form-group">
                            <label class="form-label">Categorie:
                                <small>(Let op: De categorie word niet automatisch ingevuld en zal dus opniew aan de
                                    desbetreffende categorie moeten worden gekoppeld!)
                                </small>
                            </label>
                            {{ form_row(form.category, {'selected': choiceOfSection.category}) }}
                        </div>
                        <div class="form-group">
                            <label class="form-label">Dagdeel:</label>
                            {{ form_row(form.partOfDay, {'value': choiceOfSection.partOfDay}) }}
                        </div>
                        <div class="form-group">
                            <label class="form-label">Niveau:</label>
                            {{ form_row(form.tier) }}
                        </div>
                        <div class="form-group">
                            <label class="form-label">Contact uren:</label>
                            {{ form_row(form.contact_hours, {'value': choiceOfSection.extraInformation.contactHours}) }}
                        </div>
                        <div class="form-group">
                            <label class="form-label">BPV uren:</label>
                            {{ form_row(form.internship_hours, {'value': choiceOfSection.extraInformation.internshipHours}) }}
                        </div>
                        <div class="form-group">
                            <label class="form-label">Examinering:</label>
                            {{ form_row(form.examination, {'value': choiceOfSection.extraInformation.examination}) }}
                        </div>
                        <div class="form-group">
                            <label class="form-label">Kosten:</label>
                            {{ form_row(form.cost, {'value': choiceOfSection.extraInformation.cost}) }}
                        </div>
                        <div class="form-group">
                            <label class="form-label">Beschrijving:</label>
                            {{ form_row(form.description, {'value': choiceOfSection.description}) }}
                        </div>
                        <div class="form-group text-right">
                            <button class="btn btn-primary">Verzenden</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
                <div class="card col-lg-6">
                    <div class="card-header">
                        <i class="fa fa-newspaper"></i> Voorbeeld
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label class="form-label">Naam:</label>
                            <input type="text" class="form-control" value="{{ choiceOfSection.name }}" disabled>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Categorie:</label>
                            <input type="text" class="form-control" value="{{ choiceOfSection.category.name }}"
                                   disabled>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Dagdeel:</label>
                            <input type="text" class="form-control" value="{{ choiceOfSection.partOfDay.partOfDay }}"
                                   disabled>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Niveau:</label>
                            <input type="text" class="form-control" value="{{ choiceOfSection.tier.niveau }}" disabled>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Contact uren:</label>
                            <input type="text" class="form-control" value="{{ choiceOfSection.extraInformation.contactHours }}" disabled>
                        </div>
                        <div class="form-group">
                            <label class="form-label">BPV uren:</label>
                            <input type="text" class="form-control" value="{{ choiceOfSection.extraInformation.internshipHours }}" disabled>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Examinering:</label>
                            <input type="text" class="form-control" value="{{ choiceOfSection.extraInformation.examination }}" disabled>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Kosten:</label>
                            <input type="text" class="form-control" value="{{ choiceOfSection.extraInformation.cost }}" disabled>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Beschrijving:</label>
                            <textarea class="form-control" id="exampleDescription" name="exampleDescription"
                                      disabled>{{ choiceOfSection.description|markdown }}</textarea>
                        </div>
                    </div>
                </div>
                <div class="card col-lg-6">
                    <div class="card-header">
                        <i class="fa fa-edit"></i> Periodes aan keuzedeel toevoegen
                    </div>
                    <div class="card-body">
                        <form name="periodForm" method="post">
                            <div class="form-group">
                                <label class="form-label">Periodes:</label>
                                <br>
                                {% for period in periods %}
                                    <input type="checkbox" name="{{ period.id }}" value="{{ period.id }}">
                                    <label for="{{ period.id }}">{{ period.period }}</label>
                                    <br>
                                {% endfor %}
                            </div>
                            <div class="form-group text-right">
                                <button type="submit" name="submitperiod" class="btn btn-primary">Verzenden</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <footer class="sticky-footer">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright © Johannes Vlot, Klaas-Jelle Ras 2019</span>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.content-wrapper -->

</div>
<!-- /#wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <a class="btn btn-primary" href="{{ path('logout') }}">Logout</a>
            </div>
        </div>
    </div>
</div>

<script>
    CKEDITOR.replace('update_choice_of_section_form[description]');
    CKEDITOR.replace('exampleDescription').removePlugins = 'list';
    CKEDITOR.config.removePlugins = 'about,sourcearea,link,magicline';
    CKEDITOR.config.removeButtons = 'Anchor';

</script>
